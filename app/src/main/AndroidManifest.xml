<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.archidni.archidni">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Ui.Main.MainActivity" />
        <activity
            android:name=".Ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ui.Search.SearchActivity"
            android:noHistory="false"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Ui.PathSearch.PathSearchActivity"
            android:label="@string/plan_path"
            android:parentActivityName=".Ui.Main.MainActivity" />
        <activity
            android:name=".Ui.SetLocation.SetLocationActivity"
            android:label="Selectionner un emplacement"
            android:theme="@style/AppThemeWithActionBar" />
        <activity android:name=".Ui.Station.StationActivity" />
        <activity android:name=".Ui.Line.LineActivity" />
        <activity
            android:name=".Ui.SearchLineStation.SearchLineStationActivity"
            android:label="Rechercher une ligne ou une station"
            android:parentActivityName=".Ui.Main.MainActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".Ui.PathDetails.PathDetailsActivity" />
        <activity android:name=".Ui.PathNavigation.PathNavigationActivity" />
        <activity
            android:name=".Ui.Login.LoginActivity"
            android:theme="@style/LogInTheme" />
        <activity
            android:name=".Ui.Signup.SignupActivity"
            android:label="Inscription"
            android:theme="@style/LogInTheme" />
        <activity
            android:name=".Ui.Favorites.FavoritesActivity"
            android:label="Mes favoris"
            android:parentActivityName=".Ui.Main.MainActivity"
            android:theme="@style/AppThemeWithActionBar" />
        <activity android:name=".Ui.Settings.SettingsActivity"></activity>
    </application>

</manifest>