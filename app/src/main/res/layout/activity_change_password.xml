<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Ui.Login.ChangePasswordActivity">
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:text="Changement de mot de passe"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="28sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-thin"
                android:backgroundTint="@color/color_transport_mean_not_selected"
                android:hint="Ancien mot de passe"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHighlight="#000"
                android:textColorHint="@color/color_transport_mean_selected_2" />
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-thin"
            android:backgroundTint="@color/color_transport_mean_not_selected"
            android:hint="Nouveau mot de passe"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHighlight="#000"
            android:textColorHint="@color/color_transport_mean_selected_2" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-thin"
            android:backgroundTint="@color/color_transport_mean_not_selected"
            android:hint="Confirmer le nouveau mot de passe"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHighlight="#000"
            android:textColorHint="@color/color_transport_mean_selected_2" />
    </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/text_finish"
            android:paddingRight="8dp"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Confirmer"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@drawable/shape_green_empty_rect"
            android:textColor="@color/color_transport_mean_selected_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/text_cancel"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Annuler"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape_red_rounded"
            android:textColor="#FFF"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>