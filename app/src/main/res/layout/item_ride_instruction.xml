<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_transport_mean_2_enabled" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="Prendre le bus"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Ligne 16 Alger-Bacretios vers Bacretios"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Ligne 14 Hind-Bacretios vers Bacretios"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            android:layout_height="1dp" />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/shape_button_circle_empty_transport_mean2"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:text="Alger"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <View
                    android:layout_width="4dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/color_transport_mean_selected_2"
                    />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:text="12 arrets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="top"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/shape_button_circle_empty_transport_mean2"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:text="Agha"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#EDEDED"
        android:layout_height="1dp" />
    <TextView
        android:visibility="gone"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/colorGreen"
        android:padding="4dp"
        android:background="@drawable/shape_green_empty_rect"
        android:text="Voir sur la carte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>