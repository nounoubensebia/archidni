<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:id="@+id/container"
    android:layout_marginRight="8dp">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"/>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_line_name"
            android:textStyle="bold"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_transport_mean_2_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ligne 12 vers Hind"
            android:textColor="#000" />

        <TextView
            android:id="@+id/text_perturbations"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_warning_black_24dp"
            android:layout_weight="1"
            android:text="Des perturbations ont été signalées sur cette ligne"
            android:textColor="#000" />


        <TextView
            android:id="@+id/text_duration"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_green_empty_rect_transport_mean_3"
            android:gravity="center"
            android:text="Temps d'attente moyen 12 minutes"
            android:textColor="@color/color_transport_mean_selected_3"
            android:textSize="12sp" />

    </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>