<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/container"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/shape_rect_white_rounded__8dp"
        android:layout_gravity="center"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/image_transport_mean_icon"
            app:srcCompat="@drawable/ic_transport_mean_3_enabled"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/text_name"
                android:textColor="@color/color_transport_mean_selected_3"
                android:textSize="16sp"
                android:text="Tramway d'alger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_time_period"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_marginLeft="16dp"
                android:text="05:30-07:00"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_waiting_time"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_marginLeft="16dp"
                android:text="Temps d'attente : 5 minutes"
                android:textColor="#000"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/text_origin"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_circle_transport_mean_3"
                android:text="Cité Zehouni Mokhtar, El Mohammadia"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/destination_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/separation_view"
                        android:layout_marginLeft="20dp"
                        android:background="#bdbdbd"
                        android:layout_width="0.5dp"
                        android:layout_height="16dp"/>

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="16dp"
                    android:id="@+id/text_destination"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_circle_transport_mean_3"
                    android:text="Chéraga, Alger"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>