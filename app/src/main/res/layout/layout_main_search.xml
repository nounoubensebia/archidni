<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="8dp"
    android:background="@drawable/shape_rect_white_rounded__16dp"
    android:layout_marginLeft="16dp"
    android:padding="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="32dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_open_drawer"
            app:srcCompat="@drawable/ic_dehaze_green_24dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp" />
        <TextView
            android:id="@+id/text_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_search"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:text="@string/where_to_go"
            android:textColor="#000"
            android:textSize="24sp"
            android:drawableEnd="@drawable/ic_search_green"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

