<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.EmailVerifActivity">
    <ImageView
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/ic_logo_simple"
        android:layout_gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="@string/beta_version"
        android:textColor="#000"
        android:textSize="28sp" />

    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Vérifiez votre boite e-mail"
        android:textColor="@color/colorGreen"
        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="Veuillez entrer le code de vérification qui vous a été envoyé, Si vous n'arrivez pas à trouver le mail que nous vous avons envoyé veuillez vérifier dans votre dossier Spams"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/editText_code"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_green_empty_rect"
        android:layout_width="match_parent"
        android:layout_marginLeft="32dp"
        android:padding="8dp"
        android:hint="Code de vérification"
        android:textColorHint="@color/colorGreen"
        android:textColor="#000"
        android:layout_marginRight="32dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_green_rounded"
        android:gravity="center"
        android:padding="8dp"
        android:text="Vérifier"
        android:textColor="#FFF"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/text_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_red_rounded"
        android:gravity="center"
        android:padding="8dp"
        android:text="Ré-envoyer le code"
        android:textColor="#FFF"
        android:textSize="20sp" />

</LinearLayout>